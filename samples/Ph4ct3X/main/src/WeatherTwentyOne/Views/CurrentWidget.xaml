<VerticalStackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Spacing="15"
             x:Class="WeatherTwentyOne.Views.CurrentWidget">

    <Image
        WidthRequest="200"
        HeightRequest="200"
        HorizontalOptions="Center"
        Aspect="AspectFit"
        Source="weather_partly_cloudy_day.png" />

    <Label
        Text="52℉"
        HorizontalOptions="Center"
        class="Title1" />

    <Grid>
        <Frame
            CornerRadius="15"
            HorizontalOptions="Center"
            Padding="0"
            BackgroundColor="{StaticResource Primary}">
            <Grid
                RowDefinitions="4,*,4"
                ColumnDefinitions="15,*,15"
                RowSpacing="0"
                ColumnSpacing="0"
                HorizontalOptions="Center">
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Clear"
                    HorizontalOptions="Center"
                    FontSize="18"/>
            </Grid>
        </Frame>
    </Grid>

</VerticalStackLayout>