<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppMAUI.DemoSample.MainPage"
    >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            >
            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" 
                />

            <Button
                x:Name="button_person"
                Text="Person"
                SemanticProperties.Hint="Person Page"
                Clicked="OnPersonClicked"
                HorizontalOptions="Center" 
                />
            <Button
                x:Name="button_datetime"
                Text="DateTime"
                SemanticProperties.Hint="DateTime"
                Clicked="OnDateTimeClicked"
                HorizontalOptions="Center" 
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
